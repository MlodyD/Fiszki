<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swagerzy.los_peces.CreateDeckController">

   <center>
      <VBox alignment="CENTER" maxWidth="400.0" spacing="15.0">
         <children>
            <Label text="Crear Baraja Nueva">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Nombre de la baraja">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Label>
                  <TextField fx:id="deckNameField" promptText="Nombre De la Baraja" />
               </children>
            </VBox>

            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="DescripciÃ³n">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="deckDescriptionField" prefHeight="100.0" promptText="Corto Description de la Baraja..." wrapText="true" />
               </children>
            </VBox>

            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  
                  <Button cancelButton="true" onAction="#goBack" text="Cancelar" style="-fx-background-color: #888888; -fx-text-fill: white;">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>

                  <Button defaultButton="true" onAction="#createDeck" text="Crear Baraja">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>

         </children>
         
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </padding>
      </VBox>
   </center>

</BorderPane>