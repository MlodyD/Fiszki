<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swagerzy.los_peces.MainMenuController">

   <top>
      <Label text="Los Peces" BorderPane.alignment="CENTER" styleClass="label-header">
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>

   <center>
      <VBox alignment="TOP_CENTER" spacing="15.0">
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </BorderPane.margin>
         
         <children>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button onAction="#goToCreateDeck" prefHeight="44.0" prefWidth="200.0" text="Crear nueva Baraja" />
                  <Button onAction="#ImportDeck" prefHeight="44.0" prefWidth="200.0" text="Cargar una Baraja" />
               </children>
            </HBox>

            <ScrollPane fx:id="sp" fitToWidth="true" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
               <content>
                  <!-- VBox wewnątrz listy, też wyśrodkowany -->
                  <VBox fx:id="vbox" alignment="TOP_CENTER" spacing="10.0">
                      <padding>
                          <Insets bottom="10.0" top="10.0" />
                      </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </center>

</BorderPane>
