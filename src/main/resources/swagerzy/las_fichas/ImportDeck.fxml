<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" styleClass="mainFxmlClass" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swagerzy.las_fichas.ImportDeckController">
   <children>
      
      <Label text="Importar Mazo">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      
      <Label text="Seleccionar archivo del disco" textFill="#666666" />

      <HBox alignment="CENTER" maxWidth="500.0" spacing="10.0">
         <children>
            <TextField fx:id="pathField" editable="false" prefHeight="35.0" promptText="Ruta del archivo..." HBox.hgrow="ALWAYS" />
            
            <Button onAction="#handleBrowse" prefHeight="35.0" text="Buscar" />
         </children>
      </HBox>

      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button onAction="#handleBack" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #999;" text="Cancelar" textFill="WHITE" />
            <Button onAction="#handleImport" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #4CAF50;" text="Importar" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </HBox>
      
      <Label fx:id="statusLabel" text="" textFill="RED" />

   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
