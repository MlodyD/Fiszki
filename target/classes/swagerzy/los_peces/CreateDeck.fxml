<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" 
            styleClass="mainFxmlClass" 
            stylesheets="@../styles/style.css" 
            xmlns="http://javafx.com/javafx/25" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="swagerzy.los_peces.CreateDeckController">

   <!-- GÓRA: Tytuł -->
   <top>
      <Label text="Crear Baraja Nueva" BorderPane.alignment="CENTER">
         <font>
            <Font size="32.0" />
         </font>
         <BorderPane.margin>
            <Insets top="20.0" bottom="10.0" />
         </BorderPane.margin>
      </Label>
   </top>

   <!-- ŚRODEK: Formularz (wąski słupek na środku) -->
   <center>
      <VBox alignment="CENTER" spacing="15.0" maxWidth="400.0">
         <children>
            
            <!-- Pole Nazwa -->
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Nombre de la baraja">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Label>
                  <TextField fx:id="deckNameField" promptText="Nombre De la Baraja" />
               </children>
            </VBox>

            <!-- Pole Opis -->
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Descripción">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="deckDescriptionField" prefHeight="100.0" wrapText="true" 
                            promptText="Corto Description de la Baraja..." />
               </children>
            </VBox>

            <!-- Przycisk (z marginesem od góry) -->
            <Button onAction="#createDeck" text="Crear Baraja" defaultButton="true">
               <font>
                  <Font size="16.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>

         </children>
         
         <!-- Odsunięcie od krawędzi okna przy małych rozmiarach -->
         <padding>
            <Insets left="20.0" right="20.0" bottom="20.0" />
         </padding>
      </VBox>
   </center>

</BorderPane>
